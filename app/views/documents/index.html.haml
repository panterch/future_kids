- content_for :contextual_links do
  = contextual_links do
    = contextual_link_to :expand_all, '#', id: 'tree_expand_all'
    = contextual_link_to :collapse_all, '#', id: 'tree_collapse_all'

    - if current_user.is_a?(Admin)
      = contextual_link_to :edit, documents_path, id: 'tree_edit_node'
      = contextual_link_to :delete, documents_path, id: 'tree_delete_node'

- content_for :sidebar do
  .form-group
    %label Suche
    %input#document_search.form-control{type: 'text', placeholder: 'Dokumente durchsuchen...'}
  .form-group
    %button#document_search_clear.btn.btn-xs{type: 'button', style: 'display: none;'}
      Suche löschen

= boot_page_title do
  = I18n.t('nav.document')

#search_no_results.alert.alert-info{style: 'display: none;'}
  Keine Dokumente gefunden für den Suchbegriff.

#tree(data-tree="#{@documents_json.to_json}")
