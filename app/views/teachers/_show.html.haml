= show_for @teacher do |show|
  = show.attribute :name
  = show.attribute :prename
  = show.attribute(:email) { mail_to @teacher.email }
  = show.attribute :school do
    = can_link_to(@teacher.school)
  = show.attribute :phone
  = show.association :kids do |k|
    %li= can_link_to(k)
  = show.association :secondary_kids do |k|
    %li= can_link_to(k)
  = show.attribute :receive_journals
  -if current_user.is_a?(Admin)
    = show.attribute :todo
    = show.attribute :note
    = show.attribute :inactive

    = render 'relation_logs/collection', resource: @teacher
